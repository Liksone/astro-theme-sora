---
import { themeConfig } from "@config";

const { page } = Astro.props;
---

<header>
  <nav
    class="mb-10 flex items-center justify-between py-4 font-mono"
    id="navigation"
  >
    <a class="text-xl font-bold" href="/">{themeConfig.site.title}</a>
    <div class="text-neutral flex gap-4">
      {
        themeConfig.nav.map((item) => {
          if (item.name === page) {
            return (
              <a class="font-bold text-black" href={item.url}>
                {item.name}
              </a>
            );
          } else {
            return <a href={item.url}>{item.name}</a>;
          }
        })
      }
      <!-- <span> | </span> -->
      <a href="javascript:SearchWidget.open()">
        <span class="icon-[fa-solid--search] iconify-inline"></span>
      </a>
      {themeConfig.global.i18n && <a href="/en">EN</a>}
    </div>
  </nav>
</header>
